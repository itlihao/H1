<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="164dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"

    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    tools:ignore="SpUsage">

    <RelativeLayout
        android:id="@+id/rl_solid"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_doctor"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/ic_head_man"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/iv_doctor"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">

                    <TextView
                        android:id="@+id/tv_doctor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="张大伟"
                        android:textColor="@color/color_33"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv_doctor_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/tv_doctor_name"
                        android:text="男"
                        android:textColor="@color/color_7B"
                        android:textSize="26sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_list_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="5人排队中..."
                    android:textColor="@color/color_66"
                    android:textSize="26sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/item_radio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:button="@null"
                android:clickable="false" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_getNum"
            android:layout_width="136dp"
            android:layout_height="52dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:background="@drawable/main_shape_btn"
            android:text="取号"
            android:alpha="0.5"
            android:textColor="@color/color_white"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/iv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_label_m"
            android:visibility="gone"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>